
@model TezYonetimSistemi.UI.Models.OgretmenViewModel

@{
    ViewBag.Title = "Detay";
}

<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">
    Öğretim Görevlisi Detay
    <small>Öğretim Görevlisi Bilgileri</small>
</h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PROFILE SIDEBAR -->
        <div class="profile-sidebar">
            <!-- PORTLET MAIN -->
            <div class="portlet light profile-sidebar-portlet ">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img src="~/Uploads/@TezYonetimSistemi.UI.Helpers.FileUpload.UploadFolder.Profil/@Model.Fotograf" class="img-responsive" alt="">
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name"> @Model.Ad </div>
                    <div class="profile-usertitle-job"> @Model.Soyad </div>
                </div>
            </div>
        </div>
        <!-- BEGIN PROFILE CONTENT -->
        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light ">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">Öğretim Görevlisi Bilgileri</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- PERSONAL INFO TAB -->
                                <div class="tab-pane active" id="tab_1_1">
                                    <div class="form-group">
                                        <label class="control-label">Unvan</label>
                                        <input type="text" disabled class="form-control" value="@Model.Unvan" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Adı</label>
                                        <input type="text" disabled class="form-control" value="@Model.Ad" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Soyadı</label>
                                        <input type="text" disabled class="form-control" value="@Model.Soyad" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Mail</label>
                                        <input type="text" disabled class="form-control" value="@Model.Mail" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Tez Listesi
                </div>
                <div class="tools"> </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="sample_2">
                    <thead>
                        <tr>
                            <th>
                               Tez Adı
                            </th>
                            <th>
                               Tez Dönemi
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TezYonetimSistemi.UI.Models.TezViewModel item in ViewBag.OgretimGorevlisininTezleri)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TezAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TezDonemi)
                                </td>
                                <td>
                                    @Html.ActionLink("Detay", "TezDetay", new { ID = item.ID }) |
                                    @Html.ActionLink("Düzenle", "TezDuzenle", new { ID = item.ID }) |
                                    @Html.ActionLink("Sil", "TezSil", new { ID = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section styles{
    <link href="/assets/pages/css/profile.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

}
@section scripts {
    <script src="/assets/global/plugins/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/profile.min.js" type="text/javascript"></script>
    <script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/table-datatables-buttons.js" type="text/javascript"></script>
}
