@model TezYonetimSistemi.UI.Models.OgrenciViewModel

@{
    ViewBag.Title = "Detay";
}

<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">
    Ogrenci Detay
    <small>Öğrenci Bilgileri</small>
</h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PROFILE SIDEBAR -->
        <div class="profile-sidebar">
            <!-- PORTLET MAIN -->
            <div class="portlet light profile-sidebar-portlet ">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img src="~/Uploads/@TezYonetimSistemi.UI.Helpers.FileUpload.UploadFolder.Profil/@Model.Fotograf" class="img-responsive" alt="">
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name"> @Model.Ad </div>
                    <div class="profile-usertitle-job"> @Model.Soyad </div>
                </div>
            </div>
        </div>
        <!-- BEGIN PROFILE CONTENT -->
        <div class="profile-content">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light ">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">Öğrenci Bilgileri</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- PERSONAL INFO TAB -->
                                <div class="tab-pane active" id="tab_1_1">
                                    <div class="form-group">
                                        <label class="control-label">Öğrenci No</label>
                                        <input type="text" disabled class="form-control" value="@Model.OgrenciNo" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Adı</label>
                                        <input type="text" disabled class="form-control" value="@Model.Ad" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Soyadı</label>
                                        <input type="text" disabled class="form-control" value="@Model.Soyad" />
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Mail</label>
                                        <input type="text" disabled class="form-control" value="@Model.Mail" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@{ Html.RenderAction("OgrenciTezPartialViev", "Default", new { ID = Model.ID }); }
@section styles{
    <link href="/assets/pages/css/profile.min.css" rel="stylesheet" type="text/css" />
}


@section scripts {
    <script src="/assets/global/plugins/jquery.sparkline.min.js" type="text/javascript"></script>
    <script src="/assets/pages/scripts/profile.min.js" type="text/javascript"></script>
}